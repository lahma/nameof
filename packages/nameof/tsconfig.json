{
    "extends": "@manuth/tsconfig/recommended",
    "compilerOptions": {
        "composite": true,
        "declarationMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "Node16",
        "lib": [
            "ES2022"
        ],
        "target": "ES2015",
        "paths": {
            "@typescript-nameof/*": [
                "../*/src"
            ]
        },
        "plugins": [
            {
                "transform": "../nameof"
            }
        ]
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./src/tests/type-tests"
    ],
    "references": [
        {
            "path": "../tests-common"
        }
    ]
}
