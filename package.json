{
  "name": "typescript-nameof",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "ts-patch install && npm run --workspace @typescript-nameof/test patch",
    "clean": "npm run --workspaces --if-present clean",
    "build": "npm run --workspaces --if-present build",
    "test": "npm run --workspaces --if-present test",
    "lint": "eslint --max-warnings 0 .",
    "verify": "npm run test"
  },
  "devDependencies": {
    "@delagen/eslint-plugin-deprecation": "^1.3.2",
    "@manuth/eslint-plugin-typescript": "^4.1.0",
    "@types/jest": "npm:@types/node@^20.5.1",
    "@types/mocha": "npm:@types/node@^20.5.1",
    "@types/nameof": "npm:@types/node@^20.5.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.35.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^40.0.1",
    "eslint-plugin-node": "^11.1.0",
    "ts-patch": "^2.1.0",
    "typescript": "^4.9.5"
  }
}
