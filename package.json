{
  "name": "ts-nameof-workspace",
  "private": true,
  "workspaces": [
    "packages/common",
    "packages/scripts-common",
    "packages/test",
    "packages/tests-common",
    "packages/transforms-common",
    "packages/transforms-babel",
    "packages/transforms-ts",
    "packages/ts-nameof",
    "packages/ts-nameof.macro",
    "packages/types",
    "packages/babel-plugin-ts-nameof"
  ],
  "scripts": {
    "clean": "npm run --workspaces --if-present clean",
    "build": "npm run --workspaces --if-present build",
    "test": "npm run --workspaces --if-present test",
    "lint": "eslint --max-warnings 0 .",
    "verify": "npm run test test && npm run verify-declaration-file",
    "create-declaration-file": "npm run --workspace ts-nameof build:declarations && npm run --workspace ts-nameof.macro build:declarations",
    "verify-declaration-file": "npm run --workspace ts-nameof verify-declaration-file"
  },
  "devDependencies": {
    "@delagen/eslint-plugin-deprecation": "^1.3.2",
    "@manuth/eslint-plugin-typescript": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^40.0.1",
    "eslint-plugin-node": "^11.1.0"
  }
}
